<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/hello_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="#4b72f4"
        android:text="Hello"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/hello_text"
        android:background="#0fd1ce"
        android:text="왼쪽"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/hello_text"
        android:background="#0fd1ce"
        android:text="오른쪽"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/hello_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ea7a7a"
        android:text="안녕"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/hello_text2"
        android:background="#0fd1ce"
        android:text="위쪽"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@id/hello_text2"
        android:background="#0fd1ce"
        android:text="오른쪽"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/bye_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="#d4d94b"
        android:text="Bye!"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@id/bye_text"
        android:background="#0fd1ce"
        android:text="왼쪽"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/bye_text"
        android:layout_alignEnd="@id/bye_text"
        android:background="#0fd1ce"
        android:text="위쪽"
        android:textSize="30sp" />

</RelativeLayout>