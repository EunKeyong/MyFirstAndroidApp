<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_basketball"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.example.byg.exam_0120.BasketballActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Team A" />

            <TextView
                android:id="@+id/team1_score_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="0"
                android:textColor="#000000"
                android:textSize="45dp" />

            <Button
                android:id="@+id/team1_button1"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#ed7b2f"
                android:text="+3 points" />

            <Button
                android:id="@+id/team1_button2"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#ed7b2f"
                android:text="+2 points" />

            <Button
                android:id="@+id/team1_button3"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:backgroundTint="#ed7b2f"
                android:text="free throw" />
        </LinearLayout>

        <TextView
            android:layout_width="1dp"
            android:layout_height="270dp"
            android:background="#787474" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Team B" />

            <TextView
                android:id="@+id/team2_score_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="0"
                android:textColor="#000000"
                android:textSize="45dp" />

            <Button
                android:id="@+id/team2_button1"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#ed7b2f"
                android:text="+3 points" />

            <Button
                android:id="@+id/team2_button2"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#ed7b2f"
                android:text="+2 points" />

            <Button
                android:id="@+id/team2_button3"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:backgroundTint="#ed7b2f"
                android:text="free throw" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/reset_button"
        android:layout_width="85dp"
        android:layout_height="40dp"
        android:layout_marginTop="200dp"
        android:backgroundTint="#ed7b2f"
        android:text="reset" />

</LinearLayout>
